pipeline {
    agent any
    stages {    
        stage('Running on MNP-Dev Environment') {
            steps{
                checkout scm
                echo "Removing files and folders"
                sh 'ls -al'
                sh 'rm -rf .git'
                echo "Deploying on MNP-DEV Environment by Code deploy"    
                step([$class: 'AWSCodeDeployPublisher',
                       applicationName:'new-deploy1',
                       awsAccessKey: '', awsSecretKey: '', deploymentConfig: 'CodeDeployDefault.OneAtATime', deploymentGroupAppspec: false, deploymentGroupName: 'new-deploy2', excludes: '', iamRoleArn: '', includes: '**', proxyHost: '', proxyPort: 0, region: 'us-east-1', s3bucket: 'bucket5476', s3prefix: 'mnp-dev', subdirectory: '', versionFileName: '', waitForCompletion: false]
                    )    
            }    
        }                
    }
}
